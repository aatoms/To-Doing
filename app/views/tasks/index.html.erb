<div class='container'>
  <h1 class='page-header'>
    Tasks for <%= @name %>
      <div class="pull-right">
        <%= link_to 'New Task', new_project_task_path, class: "btn btn-info"  %>
      </div>
  </h1>
    <ol class='breadcrumb'>
       <li><%= link_to "Projects", projects_path %> / <%= link_to @project.name, project_path(@project) %> / Tasks </li>
    </ol>

  <table class= "table">
    <thead>
      <tr>
       <th> Description </th>
       <th align= 'left'> Due Date: </th>
      </tr>
    </thead>

    <tbody>
    <% @project.tasks.each do |tasks| %>
      <tr>
        <td>
          <% if tasks.complete %>
            <u>
              <s>
              <%= link_to tasks.description, project_task_path(@project, tasks) %>
            </u>
          </s>
          <% else %>
            <u>
            <%= link_to tasks.description, project_task_path(@project, tasks) %>
            <div class='badge'><%= link_to tasks.comments.count %></div>
            </u>
          <% end %>
        </td>

        <td>
          <% if tasks.due_date %>
            <%= tasks.due_date.strftime("%m/%d/%Y") %>
          <% end %>
        </td>


        <td>
          <div class= "pull-right">
            <%= link_to "Edit", edit_project_task_path(@project, tasks), class: "btn btn-info" %>
            <%= link_to "", project_task_path(@project, tasks), method: :delete, class: 'glyphicon glyphicon-remove' %>
          </div>
        </td>
      </tr>

      <% end %>

    </tbody>
  </table>
</div>
