<div class='container'>
  <div class='row'>
    <div class='col-md-10'>
      <h2>
        <% if @task.complete == true %>
        <s>
          <%= @task.description %>
        </s>
        <% else %>
        <%= @task.description %>
        <% end %>
      </h2>
      <h2>
        <% if @task.due_date == true %>
        <s>
          <%= "Due On:" %>
          <%= @task.due_date %>
        </s>
        <% else %>
        <%= "Due On:" %>
        <%= @task.due_date.strftime('%m/%d/%Y') %>
        <% end %>
      </h2>
    </div>

    <div class="pull-right">
      <div class='col-md-2'>
      <%= link_to "Edit", edit_task_path, class: "btn btn-info margin-top-button" %>
      </div>
    </div>
  </div>

  <hr></hr>
  <ol class="breadcrumb">
    <li>
      <%= link_to "Tasks", tasks_path %>
    </li>
  </ol>

</div>
