<div class='container'>

  <%=  form_for @project, html: {class: 'form-horizontal'} do |f| %>

    <div class='form-group'>
      <% if @project.errors.any? %>
        <div class='col-sm-offset-2 col-sm-6'>
          <div class='alert alert-danger'>
            <h4><%= pluralize(@project.errors.count, "error") %> <%= "prohibited this from being saved :"%> </h4>
              <ul><% @project.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              </ul>
          </div>
        </div>
      </div>
    <% end %>
    <% end %>

    <div class='form-group'>
        <%= f.label :name, class: 'col-md-1 control-label' %>
        <div class='col-md-6'>
        <%= f.text_field :name, class: 'form-control', placeholder: "Name" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-2 col-sm-6">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to "Cancel", projects_path, class: "btn btn-default" %>
      <% unless @project.new_record? %>
      <%= link_to "Delete", project_path(@project), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure you want to delete this?"} %>
      </div>
    </div>

    <% end  %>
  <% end %>
</div>
