<div class="container">
  <div class="page-header">
    <div class="pull-right">
      <%= link_to 'New Project', new_project_path, class: "btn btn-info"  %>
    </div>
    <h1> Projects </h1>
  </div>

  <table class= "table">
    <thead>
      <tr>
       <th>Name</th>
       <th>Tasks</th>
       <th>Memberships</th>
      </tr>
    </thead>

    <tbody>
    <% @projects.each do |projects| %>
      <tr>
        <td>
          <u><%= link_to projects.name, projects_path(@project_id) %></u>
        </td>
        <td>
          <u><%= link_to projects.tasks.count, project_tasks_path(projects) %></u>
        </td>
        <td>
          <u><%= link_to projects.memberships.count, project_memberships_path(projects) %></u>
        </td>

        <td>
          <div class= "pull-right">
            <%= link_to "Edit", edit_project_path(projects), class: "btn btn-info" %>
            <%= link_to "Delete", project_path(projects), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure you want to delete?"} %>
          </div>
        </td>
      </tr>
      <% end %>

    </tbody>
  </table>

</div>
