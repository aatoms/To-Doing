<div class='container'>
  <h1 class='page-header'> Users
    <div class="pull-right">
      <%= link_to 'New User', new_user_path, class: "btn btn-info"  %>
    </div>
  </h1>

  <table class= "table">
    <thead>
      <tr>
       <th> Name </th>
       <th> Email </th>
      </tr>
    </thead>

    <tbody>
    <% @users.each do |users| %>
      <tr>
        <td>
          <%= link_to users.first_name+" "+users.last_name, user_path(users) %>
        </td>
        <td>
          <%= link_to users.email, user_path(users) %>
        </td>

        <td>
          <div class= "pull-right">
            <%= link_to "Edit", edit_user_path(users), class: "btn btn-info" %>
            <%= link_to "Delete", user_path(users), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure you want to delete?"} %>
          </div>
        </td>
      </tr>

    <% end %>

    </tbody>
  </table>

</div>
