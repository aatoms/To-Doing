<div class='container'>
  <div class='page-header'>
    <h1> <%= @project.name %>: Manage Members </h1>
  </div>

  <div>
    <ol class='breadcrumb'>
      <li><%= link_to "Projects", projects_path %></li>
      <li><%= link_to @project.name, @project %></li>
      <li class='active'>Memberships</li>
    </ol>
  </div>

  <div class='row'>
    <div class='col-md-6'>
      <% if @membership.errors.any? %>
        <div class='alert alert-danger', role = 'alert'>
          <h4> <%= pluralize(@membership.errors.count, 'error') %> prohibited this form from being saved: </h4>
              <ul> <% @membership.errors.full_messages.each do |message| %>
            <li> <%= message %> </li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>

  <div class='well'>
    <%= form_for [@project, @membership], html:{class: 'form-inline'} do |f| %>

      <div class='form-group'>
        <%= f.collection_select(:user_id, User.all, :id, :full_name, {prompt: "Please select a User:"}) %>
      </div>

      <div class='form-group'>
        <%= f.collection_select(:role, Membership::Role, :to_s, :to_s) %>
      </div>

      <div class='form-group'>
        <%= f.submit "Add New Member", class: 'btn btn-primary' %>
      </div>

    <% end %>
  </div>

  <% @project.memberships.each do |u| %>
    <% if u.user.present? && u.id.present? %>
      <%= form_for [@project, u], html: {class: 'form-incline'} do |f| %>
        <tr>
          <td> <%= link_to u.user.full_name, user_path(u.user), class: 'pull-left' %> </td>
          <td> <%= link_to project_membership_path(@project,u), method: :delete do %>
            <span class='glyphicon glyphicon-remove'></span>
          <% end %>
      <% end %>
    <% end %>
  <% end %>

</div>
